from building import *

src = []
path = [GetCurrentDir()]
define = ['RTT_ZG_GATEWAY']

version_query_src = Glob("Projects/zstack/linux/version_query_minitool/Source/*.c")
version_query_path = [GetCurrentDir() + '/Projects/zstack/linux/version_query_minitool/Source']
version_query_define = ['_GNU_SOURCE', 'xHAL_UART_SPI']

npi_src = Split("""
Projects/tools/LinuxHost/ipclib/server/hal_gpio.c
Projects/tools/LinuxHost/ipclib/server/npi_lnx_ipc.c
""")

npi_path = [GetCurrentDir() + '/Projects/tools/LinuxHost/ipclib/server',
    GetCurrentDir() + '/Projects/tools/LinuxHost/ipclib/common']
npi_define = ['MRDY_EARLY_FIX', 'RNP_HOST', 'SRDY_INTERRUPT']

nwkmgr_src = Split("""
Projects/zstack/linux/nwkmgr/nwkmgr.pb-c.c
Projects/zstack/linux/nwkmgr/nwkmgrdatabase.c
Projects/zstack/linux/nwkmgr/nwkmgrp2p.c
Projects/zstack/linux/nwkmgr/nwkmgrservices.c
Projects/zstack/linux/nwkmgr/nwkmgrsrv.c
Projects/zstack/linux/nwkmgr/zcl_port.c
Projects/zstack/linux/srvwrapper/configparser.c
Projects/zstack/linux/srvwrapper/main.c
Projects/zstack/linux/srvwrapper/trace.c
Projects/zstack/linux/sdb/SimpleDB.c
Projects/zstack/linux/sdb/SimpleDBTxt.c
Projects/zstack/linux/srvepconfig/serverep.c
Projects/zstack/linux/srvepconfig/serverdefep.c
Projects/zstack/linux/zstackpb/zstack.pb-c.c
Projects/zstack/linux/serverpb/server.pb-c.c
Components/stack/zcl/zcl_general.c
Components/stack/zcl/zcl.c
""")
#Projects/zstack/linux/srvwrapper/api_client.c
#Projects/zstack/linux/srvwrapper/api_server.c

nwkmgr_path = [GetCurrentDir() + '/Components/stack/zcl',
    GetCurrentDir() + '/Projects/zstack/linux/zstackpb',
    GetCurrentDir() + '/Projects/zstack/linux/hal',
    GetCurrentDir() + '/Projects/zstack/linux/nwkmgr',
    GetCurrentDir() + '/Projects/zstack/linux/serverpb',
    GetCurrentDir() + '/Projects/zstack/linux/srvepconfig',
    GetCurrentDir() + '/Projects/zstack/linux/sdb',
    GetCurrentDir() + '/Projects/zstack/linux/srvwrapper',
    GetCurrentDir() + '/Projects/zstack/linux/hagateway',
    GetCurrentDir() + '/Projects/zstack/linux/linux_osal/include',
    GetCurrentDir() + '/Projects/zstack/linux/zmac']

nwkmgr_define = ['D_GNU_SOURCE', '__USE_UNIX98', 'NWKMGR_SRVR', 'ZG_SECURE_ENABLED', 'MAX_BINDING_CLUSTER_IDS', 'ZCL_ON_OFF', 'ZCL_STANDALONE', 'SERVER_NAME=NWK_MGR']
#__APP_UI__
if GetDepend(['RT_USING_ZIGBEE_TI_GATEWAY_VERSION_QUERY']):
    src += version_query_src
    path += version_query_path
    define += version_query_define

if GetDepend(['RT_USING_ZIGBEE_TI_GATEWAY_NPI_UART']):
    src += ['Projects/tools/LinuxHost/ipclib/server/npi_lnx_uart.c']
    npi_define += ['NPI_UART=TRUE']

if GetDepend(['RT_USING_ZIGBEE_TI_GATEWAY_NPI_SPI']):
    src += ['Projects/tools/LinuxHost/ipclib/server/npi_lnx_spi.c', 'Projects/tools/LinuxHost/ipclib/server/hal_spi.c']
    npi_define += ['NPI_SPI=TRUE']

if GetDepend(['RT_USING_ZIGBEE_TI_GATEWAY_NPI_I2C']):
    src += ['Projects/tools/LinuxHost/ipclib/server/npi_lnx_i2c.c', 'Projects/tools/LinuxHost/ipclib/server/hal_i2c.c']
    npi_define += ['NPI_I2C=TRUE']

if GetDepend(['RT_USING_ZIGBEE_TI_GATEWAY_NPI']):
    src += npi_src
    path += npi_path + [GetCurrentDir() + '/../../../../../libc/pthreads']
    define += npi_define

if GetDepend(['RT_USING_ZIGBEE_TI_GATEWAY_NWKMGR']):
    src += nwkmgr_src
    path += nwkmgr_path
    define += nwkmgr_define

group = DefineGroup('zigbee', src, depend = ['RT_USING_ZIGBEE', 'RT_USING_ZIGBEE_TI', 'RT_USING_ZIGBEE_TI_GATEWAY'], CPPPATH = path, CPPDEFINES=define)

Return('group')